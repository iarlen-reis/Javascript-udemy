<div class="container text-center">
    <h4>{{subtitulo}}</h4>
    <p>{{descricao}}</p>
</div>
<div class="container">
{{#if erros}}
<div class="row">
    <div class="col">
        <div class="alert alert-danger text-center">{{#each erros }}{{this}} <br>{{/each}}</div>
    </div>
{{else}}
{{/if}}
{{#if success}}
<div class="row">
    <div class="col">
        <div class="alert alert-success text-center">{{#each success }}{{this}} <br>{{/each}}</div>
    </div>
{{else}}
{{/if}}
</div>
<div class="row my-4 mb-5">
    <div class="col-lg">
        {{#if contato._id}}
        <form class="formEditarContato" action="/contato/edit/{{contato._id}}" method="POST">
        {{/if}}
        <form class="formContatoCadastro" action="/contato/index/" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{contato.nome}}">

                <label for="sobrenome">Sobrenome:</label>
                <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="{{contato.sobrenome}}">

                <label for="telefone">Telefone:</label>
                <input type="tel" class="form-control" id="telefone" name="telefone" value="{{contato.telefone}}">               

                <label for="email">Endereço de e-mail</label>
                <input type="email" class="form-control" id="email" name="email" value="{{contato.email}}">
                <small id="emailHelp" class="form-text text-muted">Nós nunca compartilharemos seu e-mail com ninguem.</small>
            </div>
            <button type="submit" class="btn btn-primary">{{botaoDescricao}}</button>
        </form>
    </div>
</div>